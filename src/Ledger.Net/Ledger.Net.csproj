<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net452</TargetFrameworks>
    <Description>A cross platform C# library for the Ledger hardwarewallet. To see the sample in a .NET Core unit test, please clone the repo. https://github.com/MelbourneDeveloper/Ledger.Net. Android, and UWP samples on their way. Support for all coins will come bit by bit, but you are able to add support by writing Request and Response messages.</Description>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>true</PackageRequireLicenseAcceptance>
    <PackageLicenseUrl>https://github.com/MelbourneDeveloper/Ledger.Net/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/MelbourneDeveloper/Ledger.Net</PackageProjectUrl>
    <AssemblyVersion>2.1.0.0</AssemblyVersion>
    <FileVersion>2.1.0.0</FileVersion>
    <Company>Christian Findlay</Company>
    <Version>2.1.0</Version>
    <RepositoryUrl>https://github.com/MelbourneDeveloper/Ledger.Net</RepositoryUrl>
    <PackageReleaseNotes>Add ability to get Bitcoin and Ethereum public keys</PackageReleaseNotes>
    <Copyright>Copyright (c) 2018 Christian Findlay</Copyright>
    <Title>Ledger.Net</Title>
    <Summary>A cross platform C# library for the Ledger hardwarewallet.</Summary>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <OutputPath>C:\GitRepos\Ledger.Net\NuGet\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Hardwarewallets.Net" Version="1.2.0" />
    <PackageReference Include="Hid.Net" Version="1.4.0" />
  </ItemGroup>

</Project>
